{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "permissions": {
    "defaultMode": "plan"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754086586293
  },
  "statusLine": {
    "type": "command",
    "command": "npx -y @owloops/claude-powerline@latest --style=powerline"
  },
  "mcpServers": {
    "zen": {
      "command": "uv",
      "args": [
        "run",
        "--python=3.12",
        "server.py"
      ],
      "cwd": "$HOME/.local/share/mcp-servers/zen-mcp-server",
      "env": {
        "PYTHONPATH": "$HOME/.local/share/mcp-servers/zen-mcp-server"
      }
    }
  }
}