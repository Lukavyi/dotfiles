{
  "name": "dotfiles-installer",
  "version": "1.0.0",
  "description": "Interactive installer for dotfiles configuration using Ink React CLI",
  "license": "MIT",
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "babel --out-dir=dist --extensions '.ts,.tsx,.js' source",
    "dev": "babel --out-dir=dist --watch --extensions '.ts,.tsx,.js' source",
    "start": "npm run build && node dist/cli.js",
    "format": "prettier --write ."
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "execa": "^9.6.0",
    "ink": "^4.1.0",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.7",
    "typescript": "^5.9.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-react",
        {
          "runtime": "automatic"
        }
      ],
      "@babel/preset-typescript"
    ]
  }
}
