{
  "name": "dotfiles-global-npm",
  "version": "1.0.0",
  "description": "Global NPM packages for dotfiles setup",
  "dependencies": {
    "@anthropic-ai/claude-code": "^2.0.5",
    "@just-every/code": "^0.2.181",
    "@openai/codex": "^0.42.0",
    "ccusage": "^17.1.1",
    "corepack": "^0.34.0",
    "happy-coder": "^0.11.0",
    "yarn": "^1.22.22"
  },
  "scripts": {
    "install-global": "npm install -g $(jq -r '.dependencies | keys[]' package.json) --force",
    "list-global": "npm list -g --depth=0"
  }
}